- page_title "#{@domain.domain}", 'Pages Domains'

%h3.page-title
  Pages Domain

.table-holder
  %table.table
    %tr
      %td
        Domain
      %td
        = link_to @domain.domain, @domain.url
    %tr
      %td
        DNS
      %td
        %p
          To access it from your domain create a new DNS A record:
        %pre
          #{@domain.domain} A PUT-IN-IP
        %p
          To access it from a subdomain create a new DNS CNAME record:
        %pre
          PUT-IN-DUMMYSUBDOMAIN #{@domain.domain} CNAME #{@domain.project.namespace.path}.#{Settings.pages.host}.
    %tr
      %td
        Certificate
      %td
        - if @domain.certificate_text
          %pre
            = @domain.certificate_text
        - else
          .light
            missing
